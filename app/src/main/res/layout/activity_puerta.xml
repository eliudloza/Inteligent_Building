<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuertaActivity"
    android:orientation="vertical"
    android:background="#F4F6F7">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_puertas"
        android:text="Puertas"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="80dp"/>

    <RelativeLayout
        android:id="@+id/controles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:layout_margin="30dp"
        android:background="@drawable/designcontrols"
        android:layout_centerInParent="true">

        <Switch
            android:id="@+id/swUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Puerta 1"
            android:textSize="25dp"
            android:textOn="Encendido"
            android:textOff="Apagado"
            android:onClick="onClick"
            />

        <Switch
            android:id="@+id/swDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Puerta 2"
            android:textSize="25dp"
            android:textOn="Encendido"
            android:textOff="Apagado"
            android:layout_below="@+id/swUno"
            android:onClick="onClick"
            />

        <Switch
            android:id="@+id/swTres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Puerta 3"
            android:textSize="25dp"
            android:textOn="Encendido"
            android:textOff="Apagado"
            android:layout_below="@+id/swDos"
            android:onClick="onClick"
            />

        <Switch
            android:id="@+id/swCuatro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Puerta corrediza"
            android:textSize="25dp"
            android:textOn="Encendido"
            android:textOff="Apagado"
            android:layout_below="@+id/swTres"
            android:onClick="onClick"
            />

    </RelativeLayout>



</RelativeLayout>